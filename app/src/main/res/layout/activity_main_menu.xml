<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_splash_screen"
    tools:context=".activity_main_menu"
    android:shape="rectangle"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:background="@drawable/my_button_bg"
        android:text="Easy English"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_button_1"
        android:onClick="description_game_mod_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/my_button_bg"
        android:textColor="@color/black"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:text="Играть в 1 режим" />

    <Button
        android:id="@+id/play_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50sp"
        android:background="@drawable/my_button_bg"
        android:onClick="description_game_mod_2"
        android:text="Играть в 2 режим"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50sp"
        android:background="@drawable/my_button_bg"
        android:onClick="description_game_mod_3"
        android:text="Играть в 3 режим"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50sp"
        android:background="@drawable/my_button_bg"
        android:onClick="description_game_mod_4"
        android:text="Играть в 4 режим"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>