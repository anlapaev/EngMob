<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game_Mode_4"
    android:background="@drawable/background_image_one_signup1"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvtask_gm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Какое слово описано ниже?"
        android:textSize="32sp"
        android:textStyle="bold"
        android:shadowColor="#ff0000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:alpha="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_pravOtv_gm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtask_gm4"
        android:text="Счёт: 0"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Тут задание"
        android:textSize="40sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/et_otvet4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_word"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_otv1_gm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ответить"
        android:layout_below="@id/et_otvet4"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="23dp"
        android:topRightRadius="23dp"
        android:topLeftRadius="23dp"/>


    <TextView
        android:id="@+id/tv_timer_gm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Осталось секунд: 30"
        android:layout_below="@id/btn_otv1_gm4"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/tv_timer_gm4"
        android:text="Назад"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="23dp"
        android:topRightRadius="23dp"
        android:topLeftRadius="23dp"
        />
</RelativeLayout>