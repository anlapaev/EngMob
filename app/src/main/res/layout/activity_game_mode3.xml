<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game_Mode_3"
    android:background="@drawable/black_splash_screen"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvtask_gm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери синоним к слову"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_pravOtv_gm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtask_gm3"
        android:text="Счёт: 0"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_sinon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Тут задание"
        android:textSize="40sp"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/btn_otv1_gm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ответить"
        android:layout_below="@id/tv_sinon"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_otv2_gm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ответить"
        android:layout_below="@id/tv_sinon"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_timer_gm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Осталось секунд: 30"
        android:layout_below="@id/btn_otv1_gm3"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_timer_gm3"
        android:text="Назад"
        />
</RelativeLayout>